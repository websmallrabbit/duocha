.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx 0;
  box-sizing: border-box;
}
.flex{
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}
.flex-item{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: center;
}

.clearfix:after{
  content: "";
  height: 0;
  display: block ;
  overflow: hidden;
  clear: both;
  visibility: hidden;
}

.clear{
  zoom: 1
}

.fr{
  float: right;
}
.fl{
  float: left;
}
.input-label{
  font-size: 14px;
  display: block;
  width: 100px;
}
.input-box{
  border: 1px solid #eee;
  font-size: 14px;
}

.content{
  margin: 20px 0;
}
.center{
  text-align: center
}

.fixed{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}

.close-icon{
  width: 32rpx;
  height:32rpx;
}


.pic{
  width: 100%;
}


.searchBox{
  position: fixed;
  top: 0;
  left: 0;
  width:100%;
  height: 100rpx;
  margin-bottom: 130px;
}

.input-box{
  width: 90%;
  height: 38px;
  margin-left: 10px;
  margin-top: 10px;
  border: 1px #eee solid;
  border-radius: 5px;
  padding-left:30px;
}

